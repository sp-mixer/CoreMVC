<!DOCTYPE html>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web6.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">MyApp</a>

    <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
            @if(HttpContextAccessor.HttpContext.Session.GetString("UserId") != null)
            {
                <li class="nav-item">
                    <span class="nav-link">ようこそ、@HttpContextAccessor.HttpContext.Session.GetString("UserName") さん</span>
                </li>
                <li class="nav-item">
                    <form method="post" action="/Login/Logout">
                        <button type="submit" class="btn btn-outline-danger btn-sm nav-link border-0 bg-transparent">ログアウト</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Login">ログイン</a>
                </li>
            }
        </ul>
    </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - web6 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
