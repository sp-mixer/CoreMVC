@model web6.Models.Tour

@{
    ViewBag.Title = "ツアー詳細";
}

<h2>@Model.Name の詳細</h2>

<div class="card mb-3">
    <div class="card-body">
        <p><strong>日付:</strong> @Model.Date.ToShortDateString()</p>
        <p><strong>価格:</strong> ¥@Model.Price</p>
        <p><strong>日数:</strong> @Model.Days 日間</p>
        <p><strong>在庫:</strong> @Model.Stock</p>
    </div>
</div>

@using (Html.BeginForm("AddToCart", "Sales", FormMethod.Post, new { @class = "row g-3" }))
{
    @Html.Hidden("tourId", Model.ID)

    <div class="col-md-3">
        <label for="quantity" class="form-label">購入数</label>
        <input type="number" name="quantity" id="quantity" class="form-control"
               min="1" max="@Model.Stock" step="1" value="1" required />
    </div>

    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary">カートに入れる</button>
    </div>
}